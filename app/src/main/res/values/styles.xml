<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainToolBar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="popupTheme">@style/actionMenu</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>

    </style>


    <style name="settings_buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal_norm</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal_norm</item>

    </style>

    <style name="normal_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal_norm</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_norm</item>
    </style>

    <style name="small_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal_norm</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_norm</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal_norm</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal_norm</item>
        <item name="android:background">@color/grey</item>
    </style>

    <!-- тема для settings action menu-->
   <style name="actionMenu" parent="Theme.AppCompat.Light">
       <item name="background">@color/white</item>
       <item name="actionMenuTextColor">@color/black</item>
   </style>

    <style name="edit_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_app_norm</item>
    </style>

    <style name="edit_text_text"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:padding">@dimen/appPadding</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
    </style>


</resources>